{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Build aarch64-linux-gnu",
          "type": "shell",
          "command": "make CROSS_COMPILE=aarch64-linux-gnu- -j $(nproc) && mkimage -A arm -O linux -T kernel -C none -a 0x40200000 -e 0x40200000 -n \"U-Boot\" -d u-boot-dtb.bin u-boot-dtb.uImage",
          "problemMatcher": {
            "base": "$gcc",
            "fileLocation": ["relative", "${workspaceFolder}"]
          },
          "group": {
              "kind": "build",
              "isDefault": true
          }
        },
        {
          "label": "Build arm-none-eabi",
          "type": "shell",
          "command": "make CROSS_COMPILE=arm-none-eabi- -j $(nproc) && mkimage -A arm -O linux -T kernel -C none -a 0x40200000 -e 0x40200000 -n \"U-Boot\" -d u-boot-dtb.bin u-boot-dtb.uImage",
          "problemMatcher": {
            "base": "$gcc",
            "fileLocation": ["relative", "${workspaceFolder}"]
          },
          "group": {
              "kind": "build",
              "isDefault": true
          }
        },
        {
          "label": "Build powerpc-linux",
          "type": "shell",
          "command": "make CROSS_COMPILE=/opt/powerpc-e500v2-toolchain/bin/powerpc-linux- -j $(nproc) && qemu-img resize u-boot-with-spl.bin 1M",
          "problemMatcher": {
            "base": "$gcc",
            "fileLocation": ["relative", "${workspaceFolder}"]
          },
          "group": {
              "kind": "build",
              "isDefault": true
          }
        },
        {
          "label": "Run imx8mp-evk",
          "type": "shell",
          "command": "echo 'QEMU RTOSdemo started'; ~/Projects/qemu/build-full/qemu-system-aarch64 -M imx8mp-evk -smp 1 -kernel ${workspaceFolder}/u-boot-dtb.uImage -serial none -serial vc -trace memory_region_ops_* -s -S",
          "dependsOn": ["Build aarch64-linux-gnu"],
          "isBackground": true,
          "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "QEMU RTOSdemo started",
              }
            }
          ]
        },
        {
          "label": "Run sabrelite",
          "type": "shell",
          "command": "echo 'QEMU RTOSdemo started'; ~/Projects/qemu/build-full/qemu-system-arm -M sabrelite -smp 4 -m 1G -kernel u-boot -serial none -serial vc -trace memory_region_ops_* -s -S",
          "dependsOn": ["Build arm-none-eabi"],
          "isBackground": true,
          "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "QEMU RTOSdemo started",
              }
            }
          ]
        },
        {
          "label": "Run ppce500",
          "type": "shell",
          "command": "echo 'QEMU RTOSdemo started'; ~/Projects/qemu/build-full/qemu-system-ppc -M mpc8544ds -m 1G -dtb /home/arch/Documents/ucp1020/ucp1020.dtb -drive id=mydrive,if=none,file=u-boot-with-spl.bin,format=raw -device sd-card,drive=mydrive -device sparse-mem,baseaddr=0xffd00000,length=256000,priority=1 -serial vc -parallel none -trace ppce500_* -trace memory_region_ops_* -s -S",
          "dependsOn": ["Build powerpc-linux"],
          "isBackground": true,
          "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "QEMU RTOSdemo started",
              }
            }
          ]
        }
    ]
}
